@page "/products/{id?}"

<MudText Typo=Typo.h4 Class="pb-4">Product Management</MudText>

<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add"
    Color="Color.Primary" Size="Size.Large" OnClick=@CreateNewProduct Class="mb-4">
    Create New Product
</MudButton>

<ProductTable Products=@_products OnEditProduct=@OnEditProduct />
<ManageProductModal @ref=_modal OnProductUpdated=@OnProductUpdated />