      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="xunit.assert">
      <Version>2.1.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Orleans\Orleans.csproj" />
