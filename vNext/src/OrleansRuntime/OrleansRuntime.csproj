<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="NuGet">
    <PackageId>Microsoft.Orleans.OrleansRuntime</PackageId>
    <Title>Microsoft Orleans Runtime</Title>
    <Description>Core runtime library of Microsoft Orleans that hosts and executes grains within a silo.</Description>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <RootNamespace>Orleans.Runtime</RootNamespace>
    <AssemblyName>OrleansRuntime</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Label="Configuration">
    <DefineConstants>$(DefineConstants);NETSTANDARD;NETSTANDARD_TODO</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\..\src\OrleansRuntime\**\*.cs" Exclude="..\..\..\src\OrleansRuntime\obj\**\*.cs;..\..\..\src\OrleansRuntime\bin\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orleans\Orleans.csproj" />
  </ItemGroup>

  <!-- Begin Orleans: Without these lines the project won't build properly -->
  <!-- Set path to ClientGenerator.exe -->
  <PropertyGroup>
    <!-- Visual Studio or MsBuild .sln build -->
    <OrleansReferencesBase>$(ProjectDir)..\Bootstrap\</OrleansReferencesBase>
  </PropertyGroup>

  <Import Project="$(ProjectDir)..\Orleans.SDK.targets" />
  <!--End Orleans -->
</Project>