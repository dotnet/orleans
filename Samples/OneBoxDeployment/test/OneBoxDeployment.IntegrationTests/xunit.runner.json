{
  "$schema": "https://xunit.github.io/schema/current/xunit.runner.schema.json",
  "appDomain": "ifAvailable",
  "diagnosticMessages": true,
  "longRunningTestSeconds": 60,
  "maxParallelThreads": 8,
  "methodDisplay": "method",
  "methodDisplayOptions": "none",
  "parallelizeAssembly": false,
  "parallelizeTestCollections": false,
  /* NOTE:
    Disabled parallelizeTestCollections since WebApiFixture tests would somehow collide with each other
    They're not supposed to by specification, though.. Since they have a shared client.
    More info: https://xunit.net/docs/running-tests-in-parallel
  */
  "preEnumerateTheories": true,
  "shadowCopy": true
}