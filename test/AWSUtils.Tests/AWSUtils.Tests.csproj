<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>AWSUtils.Tests</RootNamespace>
    <AssemblyName>AWSUtils.Tests</AssemblyName>
    <DefineConstants>$(DefineConstants);AWSUTILS_TESTS</DefineConstants>
