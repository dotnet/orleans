    <ProjectReference Include="$(SourceRoot)src\Orleans.Core\Orleans.Core.csproj" />
    <ProjectReference Include="$(SourceRoot)src\Orleans.Reminders\Orleans.Reminders.csproj" />
  </ItemGroup>

</Project>
