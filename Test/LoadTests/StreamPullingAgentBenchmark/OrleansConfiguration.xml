<?xml version="1.0" encoding="utf-8"?>
<OrleansConfiguration xmlns="urn:orleans">
  <Globals>
    <StorageProviders>
       <Provider Type="Orleans.Storage.MemoryStorage" Name="PubSubStore" />-->
    </StorageProviders>
    <StreamProviders>
      <Provider Type="LoadTestGrains.MockStreamProvider"
                Name="MockStreamProvider"
                DeploymentId="MockDeploymentId"
                TotalQueueCount="12"
                NumStreamsPerQueue="100"
                MaxBatchesPerRequest="500"
                CacheSizeKb="512"
                StreamProvider="MockStreamProvider"
                MessageProducer="ImplicitConsumer"
                ActivationTaskDelay="500"
                ActivationBusyWait="0"
                AdditionalSubscribersCount="8"
                EventTaskDelay="20"
                EventBusyWait="0"
                SiloStabilizationTime="5000"
                RampUpStagger="5000"
                SubscriptionLength="180000"
                StreamEventsPerSecond="1"
                TargetBatchesSentPerSecond="250"
                EventSize="50" />
    </StreamProviders>
    <SeedNode Address="localhost" Port="11111" />
  </Globals>
  <Defaults>
    <Networking Address="localhost" Port="11111" />
    <ProxyingGateway Address="localhost" Port="30000" />
    <Tracing DefaultTraceLevel="Info" TraceToConsole="true" TraceToFile="{0}-{1}.log">
      <TraceLevelOverride LogPrefix="NewPersistentStreamPullingAgent" TraceLevel="Info" />
      <TraceLevelOverride LogPrefix="Application" TraceLevel="Info" />
      <TraceLevelOverride LogPrefix="MockStreamProvider" TraceLevel="Info" />
      <TraceLevelOverride LogPrefix="ImplicitConsumerGrain" TraceLevel="Info" />
      <TraceLevelOverride LogPrefix="TPSAggregateGrain" TraceLevel="Info" />
    </Tracing>
    <Statistics MetricsTableWriteInterval="30s" PerfCounterWriteInterval="30s" LogWriteInterval="300s" WriteLogStatisticsToTable="true"/>
  </Defaults>
  <Override Node="Silo00">
    <Networking Address="localhost" Port="11111" />
    <ProxyingGateway Address="localhost" Port="30000" />
  </Override>
  <Override Node="Silo01">
    <Networking Address="localhost" Port="11112" />
    <ProxyingGateway Address="localhost" Port="30001" />
  </Override>
  <Override Node="Silo02">
    <Networking Address="localhost" Port="11113" />
  </Override>
</OrleansConfiguration>
