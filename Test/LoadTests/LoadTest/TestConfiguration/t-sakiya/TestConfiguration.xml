    <!--<Metric Type="AggregateMetric" Name="Busy" BasedOn="Busy" WindowSize="20" Scope="Global"/>-->
    <Metric Type="AggregateMetric" Name="Aggregate of Average TPS" BasedOn="AverageTPS" WindowSize="1" Scope="Global"/>
