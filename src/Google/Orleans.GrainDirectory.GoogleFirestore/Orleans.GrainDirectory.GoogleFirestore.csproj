<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Microsoft.Orleans.GrainDirectory.GoogleFirestore</PackageId>
    <Title>Microsoft Orleans Google Firestore Grain Directory Provider</Title>
    <Description>Microsoft Orleans GrainD irectory provider backed by Google Firestore</Description>
    <PackageTags>$(PackageTags) Google Firestore</PackageTags>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <AssemblyName>Orleans.GrainDirectory.GoogleFirestore</AssemblyName>
    <RootNamespace>Orleans.GrainDirectory.GoogleFirestore</RootNamespace>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
    <DefineConstants>$(DefineConstants);ORLEANS_DIRECTORY</DefineConstants>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Shared\Storage\FirestoreDataManager.cs" Link="Storage\FirestoreDataManager.cs" />
    <Compile Include="..\Shared\Storage\FirestoreEntity.cs" Link="Storage\FirestoreEntity.cs" />
    <Compile Include="..\Shared\Storage\FirestoreOptions.cs" Link="Storage\FirestoreOptions.cs" />
    <Compile Include="..\Shared\Storage\GoogleCloudOptions.cs" Link="Storage\GoogleCloudOptions.cs" />
    <Compile Include="..\Shared\Utils\Utils.cs" Link="Utils\Utils.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceRoot)src\Orleans.Runtime\Orleans.Runtime.csproj" />
    <PackageReference Include="Google.Cloud.Firestore" />
    <PackageReference Include="System.Net.NameResolution" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Orleans.Tests.Google</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
</Project>
