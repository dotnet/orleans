<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Microsoft.Orleans.Persistence.EntityFrameworkCore</PackageId>
    <Title>Microsoft Orleans Entity Framework Core Persistence Provider</Title>
    <Description>Microsoft Orleans persistence provider backed by Entity Framework Core</Description>
    <PackageTags>$(PackageTags) Entity Framework Core SQL MySQL PostgreSQL Oracle</PackageTags>
    <Nullable>enable</Nullable>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Orleans.Persistence.EntityFrameworkCore.SqlServer"/>
    <InternalsVisibleTo Include="Tester.EFCore"/>
  </ItemGroup>

  <PropertyGroup>
    <AssemblyName>Orleans.Persistence.EntityFrameworkCore</AssemblyName>
    <RootNamespace>Orleans.Persistence.EntityFrameworkCore</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceRoot)src\Orleans.Runtime\Orleans.Runtime.csproj" />
  </ItemGroup>

</Project>
