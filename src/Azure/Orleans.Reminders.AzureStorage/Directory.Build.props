<Project>
  <PropertyGroup>
    <_ParentDirectoryBuildPropsPath Condition="'$(_DirectoryBuildPropsFile)' != ''">$([System.IO.Path]::Combine('..', '$(_DirectoryBuildPropsFile)'))</_ParentDirectoryBuildPropsPath>
  </PropertyGroup>

  <Import Project="$(_ParentDirectoryBuildPropsPath)" Condition="Exists('$(_ParentDirectoryBuildPropsPath)')"/>

  <PropertyGroup Condition="$(OrleansAzureRemindersVersion)!=$(VersionPrefix)">
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <Choose>
    <When Condition="$(OrleansPersistenceMemoryVersion) == $(VersionPrefix) AND $(OrleansPersistenceMemoryVersion) == $(OrleansAzureRemindersVersion)">
      <ItemGroup>
        <ProjectReference Include="..\..\Orleans.Persistence.Memory\Orleans.Persistence.Memory.csproj" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Microsoft.Orleans.Persistence.Memory" Version="$(OrleansPersistenceMemoryVersion)"/>
      </ItemGroup>
    </Otherwise>
  </Choose>

</Project>