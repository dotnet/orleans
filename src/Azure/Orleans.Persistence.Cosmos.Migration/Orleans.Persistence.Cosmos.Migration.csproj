<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Microsoft.Orleans.Persistence.Cosmos.Migration</PackageId>
    <Title>Microsoft Orleans Persistence Azure Cosmos DB Migration</Title>
    <Description>Microsoft Orleans persistence migration providers for Azure Cosmos DB</Description>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>

    <!-- keep while migration tooling is not in stable state -->
    <VersionSuffix Condition=" '$(MigrationVersionSuffix)'!='' ">$(MigrationVersionSuffix)</VersionSuffix>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\Orleans.Persistence.Migration\Orleans.Persistence.Migration.csproj" />
    <ProjectReference Include="..\..\Orleans.Runtime.Abstractions\Orleans.Runtime.Abstractions.csproj" />
    <ProjectReference Include="..\Orleans.Persistence.Cosmos\Orleans.Persistence.Cosmos.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Orleans.Core\Orleans.Core.csproj" />
  </ItemGroup>
</Project>
