<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Microsoft.Orleans.Persistence.CosmosDB</PackageId>
    <Title>Microsoft Orleans Persistence Azure CosmosDB</Title>
    <Description>Microsoft Orleans persistence providers for Azure CosmosDB</Description>
    <PackageTags>$(PackageTags) Azure CosmosDB Storage</PackageTags>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <AssemblyName>Orleans.Persistence.CosmosDB</AssemblyName>
    <RootNamespace>Orleans.Persistence.CosmosDB</RootNamespace>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
    <DefineConstants>$(DefineConstants);ORLEANS_PERSISTENCE</DefineConstants>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Shared\CosmosDB\AzureCosmosDBOptions.cs" Link="Storage\AzureCosmosDBOptions.cs" />
    <Compile Include="..\Shared\CosmosDB\AzureCosmosDBOptionsValidator.cs" Link="Storage\AzureCosmosDBOptionsValidator.cs" />
    <Compile Include="..\Shared\CosmosDB\AzureCosmosDBSTJSerializer.cs" Link="Storage\AzureCosmosDBSTJSerializer.cs" />
    <Compile Include="..\Shared\CosmosDB\BaseEntity.cs" Link="Storage\BaseEntity.cs" />
    <Compile Include="..\Shared\CosmosDB\Usings.cs" Link="Storage\Usings.cs" />
    <Compile Include="..\Shared\CosmosDB\AzureCosmosDBConnectionFactory.cs" Link="Storage\AzureCosmosDBConnectionFactory.cs" />
    <Compile Include="..\Shared\CosmosDB\AzureCosmosDbThroughputMode.cs" Link="Storage\AzureCosmosDbThroughputMode.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceRoot)src\Orleans.Runtime\Orleans.Runtime.csproj" />
    <PackageReference Include="Azure.Core" />
    <PackageReference Include="Microsoft.Azure.Cosmos" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Tester.CosmosDB</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
</Project>