<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Microsoft.Orleans.Reminders</PackageId>
    <Title>Microsoft Orleans Reminders Library</Title>
    <Description>Reminders library for Microsoft Orleans used on the server.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <DefineConstants>$(DefineConstants);ORLEANS_REMINDERS_PROVIDER</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceRoot)src\Orleans.Runtime\Orleans.Runtime.csproj" />
    <ProjectReference Include="$(SourceRoot)src\Orleans.Core.Abstractions\Orleans.Core.Abstractions.csproj" />
    <ProjectReference Include="..\Orleans.Sdk\Orleans.Sdk.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="LoadTestGrains" />
    <InternalsVisibleTo Include="Orleans.AWS.Tests" />
    <InternalsVisibleTo Include="Orleans.Azure.Tests" />
    <InternalsVisibleTo Include="Orleans.Core.Tests" />
    <InternalsVisibleTo Include="Orleans.Runtime" />
    <InternalsVisibleTo Include="Orleans.Runtime.Internal.Tests" />
    <InternalsVisibleTo Include="TestInternalGrains" />
  </ItemGroup>
</Project>

