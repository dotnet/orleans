<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Microsoft.Orleans.Streaming</PackageId>
    <Title>Microsoft Orleans Streaming Library</Title>
    <Description>Streaming library for Microsoft Orleans used both on the client and server.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orleans.Runtime\Orleans.Runtime.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="LoadTestGrains" />
    <InternalsVisibleTo Include="Orleans.AdoNet.Tests" />
    <InternalsVisibleTo Include="Orleans.AWS.Tests" />
    <InternalsVisibleTo Include="Orleans.Azure.Tests" />
    <InternalsVisibleTo Include="Orleans.Core.Tests" />
    <InternalsVisibleTo Include="Orleans.DefaultCluster.Tests" />
    <InternalsVisibleTo Include="Orleans.Runtime.Internal.Tests" />
    <InternalsVisibleTo Include="Orleans.Streaming.Tests" />
    <InternalsVisibleTo Include="TestExtensions" />
    <InternalsVisibleTo Include="TestInternalGrains" />
  </ItemGroup>
</Project>

