<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Microsoft.Orleans.Core</PackageId>
    <Title>Microsoft Orleans Core Library</Title>
    <Description>Core library of Microsoft Orleans used both on the client and server.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <RootNamespace>Orleans</RootNamespace>
    <OrleansBuildTimeCodeGen>true</OrleansBuildTimeCodeGen>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="buildMultiTargeting\Microsoft.Orleans.Core.targets">
      <PackagePath>%(Identity)</PackagePath>
      <Visible>true</Visible>
      <Pack>true</Pack>
    </Content>
    <Content Include="buildTransitive\Microsoft.Orleans.Core.targets">
      <PackagePath>%(Identity)</PackagePath>
      <Visible>true</Visible>
      <Pack>true</Pack>
    </Content>
    <Content Include="build\Microsoft.Orleans.Core.targets">
      <PackagePath>%(Identity)</PackagePath>
      <Visible>true</Visible>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Update="Configuration\OrleansConfiguration.xsd">
      <SubType>Designer</SubType>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>false</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceRoot)src\Orleans.Core.Abstractions\Orleans.Core.Abstractions.csproj" />
    <PackageReference Include="Microsoft.AspNetCore.Connections.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" />
    <PackageReference Include="Microsoft.Extensions.ObjectPool" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="System.Memory.Data" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>


  <ItemGroup>
    <InternalsVisibleTo Include="Benchmarks" />
    <InternalsVisibleTo Include="CodeGenerator.Tests" />
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
    <InternalsVisibleTo Include="GoogleUtils.Tests" />
    <InternalsVisibleTo Include="LoadTestGrains" />
    <InternalsVisibleTo Include="Orleans.AdoNet.Tests" />
    <InternalsVisibleTo Include="Orleans.AWS.Tests" />
    <InternalsVisibleTo Include="Orleans.Azure.Tests" />
    <InternalsVisibleTo Include="Orleans.BroadcastChannel" />
    <InternalsVisibleTo Include="Orleans.Clustering.ZooKeeper.Tests" />
    <InternalsVisibleTo Include="Orleans.CodeGeneration" />
    <InternalsVisibleTo Include="Orleans.CodeGeneration.Build" />
    <InternalsVisibleTo Include="Orleans.Core.Tests" />
    <InternalsVisibleTo Include="Orleans.Cosmos.Tests" />
    <InternalsVisibleTo Include="Orleans.DefaultCluster.Tests" />
    <InternalsVisibleTo Include="Orleans.DurableJobs" />
    <InternalsVisibleTo Include="Orleans.DurableJobs.Tests" />
    <InternalsVisibleTo Include="Orleans.GrainDirectory.Tests" />
    <InternalsVisibleTo Include="Orleans.Placement.Tests" />
    <InternalsVisibleTo Include="Orleans.Redis.Tests" />
    <InternalsVisibleTo Include="Orleans.Reminders" />
    <InternalsVisibleTo Include="Orleans.Runtime" />
    <InternalsVisibleTo Include="Orleans.Runtime.Internal.Tests" />
    <InternalsVisibleTo Include="Orleans.Runtime.Tests" />
    <InternalsVisibleTo Include="Orleans.Streaming" />
    <InternalsVisibleTo Include="Orleans.Streaming.EventHubs.Tests" />
    <InternalsVisibleTo Include="Orleans.Streaming.Tests" />
    <InternalsVisibleTo Include="Orleans.TestingHost" />
    <InternalsVisibleTo Include="TestExtensions" />
    <InternalsVisibleTo Include="TestInternalGrains" />
  </ItemGroup>
</Project>

